<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_EditProfile"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageButton
                        android:id="@+id/back"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        android:backgroundTint="@color/White_transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Edit profile"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:paddingEnd="60dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile"
                    android:layout_marginTop="70dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="10dp"
                        android:elevation="200dp"
                        app:cardCornerRadius="200dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/ImgPicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cercle"
                            android:scaleType="centerCrop"
                            android:src="@drawable/israel" />

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btnAddPicture"
                        android:layout_width="180dp"
                        android:layout_height="59dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:backgroundTint="@color/White_transparent"
                        android:text="Change Picture"
                        android:textAllCaps="false"
                        android:textColor="@color/black_overlay"
                        android:textSize="15dp"
                        app:backgroundTint="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="8dp"
                            android:text="User name"
                            android:textColor="@color/black_overlay"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black_transparent"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Email"
                            android:textColor="@color/black_overlay"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black_transparent"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="Password"
                            android:textColor="@color/black_overlay"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black_transparent"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:inputType="text"
                            android:text="Money"
                            android:textColor="@color/black_overlay"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtMoney"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black_transparent"
                            android:textSize="25sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_weight="1"
                            android:elevation="1dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnUpdate"
                                android:layout_width="170dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="15dp"
                                android:backgroundTint="@color/red"
                                android:text="Update"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                />

                            <Button
                                android:id="@+id/btnCancel"
                                android:layout_width="170dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="40dp"
                                android:backgroundTint="@color/White_transparent"
                                android:text="Cancel"
                                android:textAlignment="center"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>