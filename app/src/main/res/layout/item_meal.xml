<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp"
    app:cardElevation="16dp"



    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            >
            <Button
                android:backgroundTint="@color/White_transparent2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/pouce1"
                android:layout_alignParentRight="true"
                android:drawableEnd="@drawable/pouce1"
                android:textAlignment="center"

                />
            <ImageView
                android:id="@+id/image_repas"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chine2" />

            <RatingBar
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="#FF5722"
                android:rating="2"
                android:padding="0dp"
                android:secondaryProgressTint="#FF5722"
                style="@style/Widget.AppCompat.RatingBar.Indicator"

                android:layout_marginTop="160dp"
                />

        </RelativeLayout>
        <LinearLayout
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/nomRepas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bergueur au Fritte"
                android:textSize="20sp"
                android:textColor="@color/fin"
                android:textAllCaps="false"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/light"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/db"

                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="11dp"
                android:paddingStart="5dp"
                />

        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>